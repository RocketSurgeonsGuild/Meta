<Project>
  <PropertyGroup>
    <UseAbstractions Condition="'$(UseAbstractions)' == ''">false</RocketSurgeryAbstractions>
    <UseCore Condition="'$(UseCore)' == ''">false</RocketSurgeryCore>
    <UseFunctions Condition="'$(UseFunctions)' == ''">false</RocketSurgeryFunctions>
    <UseHosting Condition="'$(UseHosting)' == ''">false</RocketSurgeryHosting>
    <UseAspNetCore Condition="'$(UseAspNetCore)' == ''">false</RocketSurgeryAspNetCore>

    <EnableAppMetrics Condition="'$(EnableAppMetrics)' == ''">true</EnableAppMetrics>
    <EnableAutoMapper Condition="'$(EnableAutoMapper)' == ''">true</EnableAutoMapper>
    <EnableCommandLine Condition="'$(EnableCommandLine)' == ''">true</EnableCommandLine>
    <EnableFluentValidation Condition="'$(EnableFluentValidation)' == ''">true</EnableFluentValidation>
    <EnableMediatR Condition="'$(EnableMediatR)' == ''">true</EnableMediatR>
    <EnableSerilog Condition="'$(EnableSerilog)' == ''">true</EnableSerilog>
  </PropertyGroup>
  <PropertyGroup>
    <!-- This list needs to be in reverse order of the dependencies (leaf first) so that the changes cascade correctly. -->
    <UseHosting Condition="'$(UseHosting)' == 'false' and '$(UseAspNetCore)' == 'true'">true</RocketSurgeryHosting>

    <UseCore Condition="'$(UseCore)' == 'false' and '$(UseFunctions)' == 'true'">true</RocketSurgeryCore>
    <UseCore Condition="'$(UseCore)' == 'false' and '$(UseHosting)' == 'true'">true</RocketSurgeryCore>
    <UseCore Condition="'$(UseCore)' == 'false' and '$(UseAspNetCore)' == 'true'">true</RocketSurgeryCore>

    <UseAbstractions Condition="'$(UseAbstractions)' == 'false' and '$(UseCore)' == 'true'">true</RocketSurgeryAbstractions>
  </PropertyGroup>
</Project>
